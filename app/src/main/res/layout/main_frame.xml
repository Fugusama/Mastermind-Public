            android:text="@string/game_title"
            android:layout_width="235dp"
            android:layout_height="235dp" android:id="@+id/game_title"
            android:textColor="@color/background_colour"
            android:textSize="@dimen/title_size" android:fontFamily="@font/aclonica"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/circle_dec_white"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.497"/>
