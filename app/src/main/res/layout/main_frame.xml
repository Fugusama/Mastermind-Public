            android:text="@string/start_button_text"
            android:layout_width="110dp"
            android:layout_height="110dp" android:id="@+id/start_button"
            app:layout_constraintStart_toStartOf="@+id/game_title"
            android:background="@drawable/circle_dec_white" android:textColor="@color/background_colour"
            android:fontFamily="@font/aclonica" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/game_title"
            android:layout_marginTop="104dp" app:layout_constraintEnd_toEndOf="@+id/game_title"
            app:layout_constraintHorizontal_bias="0.496"/>
</androidx.constraintlayout.widget.ConstraintLayout>